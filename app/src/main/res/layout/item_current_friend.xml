<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item_friend_layout">

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/iv_added_friend_profile"
        android:src="@drawable/avatar_shape_green"
        android:background="@drawable/profile_empty"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tv_added_friend_name"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_alignTop="@+id/iv_added_friend_profile"
        android:layout_toRightOf="@+id/iv_added_friend_profile"
        android:layout_toEndOf="@+id/iv_added_friend_profile"
        android:layout_marginLeft="10dp"
        android:textSize="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/current_friend_status"
        android:textColor="@android:color/white"
        android:layout_alignBottom="@+id/iv_added_friend_profile"
        android:layout_alignLeft="@+id/tv_added_friend_name"
        android:layout_alignStart="@+id/tv_added_friend_name"
        android:textSize="13dp"/>

</RelativeLayout>