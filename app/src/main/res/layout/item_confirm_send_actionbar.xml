<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView4"
        android:text="Delete below message?"
        android:textSize="13dp"
        android:layout_alignTop="@+id/bt_still_send"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/bt_still_send"
        android:layout_toStartOf="@+id/bt_still_send"
        android:gravity="center_horizontal"
        android:maxLines="1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/bt_cancel_message"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/bt_still_send"
        android:layout_alignBottom="@+id/bt_cancel_message"
        android:layout_toLeftOf="@+id/bt_cancel_message"
        android:layout_toStartOf="@+id/bt_cancel_message"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/waiting_message"
        android:layout_alignBottom="@+id/bt_still_send"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxLines="1"
        android:gravity="center_horizontal"
        android:layout_toLeftOf="@+id/bt_still_send"
        android:layout_toStartOf="@+id/bt_still_send"
        android:layout_marginBottom="5dp" />
</RelativeLayout>